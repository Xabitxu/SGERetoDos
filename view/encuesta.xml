<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sge_encuesta_form" model="ir.ui.view">
        <field name="name">sge.encuesta.form</field>
        <field name="model">sge.encuesta</field>
        <field name="arch" type="xml">
            <form string="üìã Encuesta">
                <header>
                    <button name="action_completar" type="object" string="‚úÖ Completar" class="btn-primary" attrs="{'invisible': [('estado', '=', 'completada')]}"/>
                    <button name="action_borrador" type="object" string="üìù Borrador" class="btn-secondary" attrs="{'invisible': [('estado', '=', 'borrador')]}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="task_id"/>
                            <field name="incidencia_id"/>
                            <field name="fecha"/>
                        </group>
                        <group>
                            <field name="puntuacion" widget="radio"/>
                            <field name="estado" widget="statusbar" statusbar_visible="borrador,completada"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="üìù Observaciones">
                            <field name="observaciones" nolabel="1"/>
                        </page>
                        <page string="Im√°genes">
                            <group>
                                <group string="Imagen principal">
                                    <field name="imagen_adjunta" widget="image"
                                           class="oe_avatar"
                                           options="{'preview_image': 'imagen_adjunta', 'size': [90, 90]}"/>
                                    <field name="nombre_imagen" placeholder="Nombre de la imagen"/>
                                </group>
                            </group>
                         </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sge_encuesta_tree" model="ir.ui.view">
        <field name="name">sge.encuesta.tree</field>
        <field name="model">sge.encuesta</field>
        <field name="arch" type="xml">
            <tree string="üìã Encuestas">
                <field name="name" string="T√≠tulo"/>
                <field name="task_id" string="Tarea"/>
                <field name="incidencia_id" string="Incidencia"/>
                <field name="puntuacion" string="Puntuaci√≥n"/>
                <field name="fecha" string="Fecha"/>
                <field name="estado" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_sge_encuesta_kanban" model="ir.ui.view">
        <field name="name">sge.encuesta.kanban</field>
        <field name="model">sge.encuesta</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="estado"/>
                <field name="fecha"/>
                <field name="puntuacion"/>
                <field name="incidencia_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><t t-esc="record.name.value"/></strong>
                            <div>Estado: <t t-esc="record.estado.value"/></div>
                            <div>
                            <i class="fa fa-calendar" aria-hidden="true"></i>
                            <t t-esc="record.fecha.value"/>
                        </div>
                            <div>
                                <t t-if="record.puntuacion.value == '1'">üò†</t>
                                <t t-elif="record.puntuacion.value == '2'">üòï</t>
                                <t t-elif="record.puntuacion.value == '3'">üòê</t>
                                <t t-elif="record.puntuacion.value == '4'">üòä</t>
                                <t t-elif="record.puntuacion.value == '5'">üòÑ</t>
                                <t t-else=""></t>
                                Puntuaci√≥n: <t t-esc="record.puntuacion.value"/>
                            </div>
                            <div>Incidencia: <t t-esc="record.incidencia_id.value"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_project_task_form_inherit_encuestas" model="ir.ui.view">
        <field name="name">project.task.form.inherit.encuestas</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Encuestas">
                    <field name="encuesta_id" readonly="1">
                        <tree string="Encuestas">
                            <field name="name" string="T√≠tulo"/>
                            <field name="incidencia_id" string="Incidencia"/>
                            <field name="puntuacion" string="Puntuaci√≥n"/>
                            <field name="fecha" string="Fecha"/>
                            <field name="estado" widget="badge"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>